@model IEnumerable<Post>
@using Shutter.Models
@{
    ViewBag.Title = "Список постов";
    int i = 0;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainContent{
<div class="main-content">
<h2>Список постов</h2>
<p>Всего непроверенных постов: @(Model.Count<Post>())</p>
<table>

    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td><b>@i</b></td>
            <td>
                @if (item.Status == (int)PostStatus.Posted)
                {
                    <img src="../../Content/pictures/status1.png" title="пост добавлен" class="tdImage" />
                }
                else if (item.Status == (int)PostStatus.Approved)
                {
                    <img src="../../Content/pictures/status2.png" title="пост подтвержден" class="tdImage" />
                }
                
            </td>
            
            <td>
                @if (item.File != null)
                {
                    <a href="/Post/Download/@item.Id">
                        <img src="../../Content/pictures/filey.png" title='@item.File' class="tdImage" />
                    </a>
                }
                else
                {
                    <img src="../../Content/pictures/filen.png" title="без файла изображения" class="tdImage" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lifecycle.Posted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                <div>
                    <a class="openDialog" data-dialog-id="infoDialog" data-dialog-title="Описание поста"
                       href="/Post/Details/@item.Id">
                        <img src="../../Content/pictures/info.png" class="tdImage" title="Описание поста" />
                    </a>
                </div>
            </td>
            
           </tr>
    }
</table>
</div>

@Styles.Render("~/Content/themes/base/css")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
}
    }