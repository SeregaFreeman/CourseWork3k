@model IEnumerable<Post>
@using Shutter.Models

@{
    ViewBag.Title = "Список постов";
    int i = 0; //счетчик
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainContent{

<p>Всего постов: @(Model.Count<Post>())</p>
<table>

    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td><b>@i</b></td>
            <td>
                @if (item.Status == (int)PostStatus.Posted)
                {
                    <img src="../../Content/pictures/status1.png" title="пост открыт" class="tdImage" />
                }                
                
                else if (item.Status == (int)PostStatus.Approved)
                {
                    <img src="../../Content/pictures/status5.png" title="пост закрыт" class="tdImage" />
                }
            </td>
            
            <td>
                @if (item.File != null)
                {
                    <a href="/Post/Download/@item.Id"><img src="../../Content/pictures/filey.png" alt='@item.File' class="tdImage" /></a>
                }
                else
                {
                    <img src="../../Content/pictures/filen.png" alt="без файла изображения" class="tdImage" />
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Lifecycle.Posted)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>

                <div>
                    <a class="PostedDialog" data-dialog-id="infoDialog" data-dialog-title="Описание заявки"
                       href="Post/Details/@item.Id">
                        <img src="../../Content/pictures/info.png" class="tdImage" title="Описание заявки" />
                    </a>
                </div>
            </td>
            
            <td>                
                <div>
                    <a class="PostedDialog" data-dialog-id="lifecycleDialog" data-dialog-title="Жизненный цикл заявки"
                       href="Post/Lifecycle/@item.LifecycleId">
                        <img src="../../Content/pictures/lifecycle.png" class="tdImage" title="Жизненный цикл заявки" />
                    </a>
                </div>

            </td>

            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
}