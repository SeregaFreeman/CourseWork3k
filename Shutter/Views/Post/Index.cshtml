@model IEnumerable<Post>
@using Shutter.Models

@{
    ViewBag.Title = "Список постов";
    int i = 0; //счетчик
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainContent{

<script type="text/javascript">
$(document).ready(function(){
	$('#gallery').gallerie();
});
</script>

<div class="main-content">
    <div id="gallery" style="padding-left: 115px">
        <p>Всего постов: @(Model.Count<Post>())</p>


        @foreach (var item in Model)
        {
            i++;

            if (item.File != null)
            {
                <a href="~/Uploads/@item.File"><img src="~/Uploads/@item.File" /></a>
            }
            else
            {
                <img src="../../Content/pictures/filen.png" alt="без файла изображения" class="tdImage" />
            }

            //@Html.ActionLink("Удалить", "Delete", new { id = item.Id })

        }

    </div>
    </div>

}