                <div class="header_btn"><a class="btn2" href="#"><span>Come Closer</span></a></div>
            </div>
            <script>
                $('.example1').wmuSlider();
            </script>
        </div>
    </div>

@if (IsSectionDefined("MainContent"))
{
    @RenderSection("MainContent")
}
else
